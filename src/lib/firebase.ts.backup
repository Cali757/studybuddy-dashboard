const { GoogleGenerativeAI } = require("@google/generative-ai");

// Initialize the Gemini API
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

async function generateLessonQuiz(transcript) {
  const model = genAI.getGenerativeModel({ model: "gemini-pro" });
  
  const prompt = `You are a helpful study assistant. Based on the following lesson transcript, create a quiz to test student understanding. Include multiple choice questions, true/false questions, and short answer questions.

Transcript: ${transcript}

Generate a comprehensive quiz with 10 questions that cover the main concepts from the lesson. Include the correct answers at the end.`;

  const result = await model.generateContent(prompt);
  const response = await result.response;
  const text = response.text();
  
  return text;
}

module.exports = { generateLessonQuiz };


