SUMMARY_NODE_CODE
-----------------

const { GoogleGenerativeAI } = require("@google/generative-ai");

// Initialize the Gemini API
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

async function generateLessonSummary(transcript) {
  const model = genAI.getGenerativeModel({ model: "gemini-pro" });
  
  const prompt = `You are a helpful study assistant. Given a lesson transcript, create a concise summary that captures the key points, main concepts, and important takeaways.

Transcript: ${transcript}

Provide a clear, well-organized summary of the lesson.`;

  const result = await model.generateContent(prompt);
  const response = await result.response;
  const text = response.text();
  
  return text;
}

module.exports = { generateLessonSummary };




