const { GoogleGenerativeAI } = require("@google/generative-ai");

// Initialize the Gemini API
const genAI = new GoogleGenerativeAI(process.env.GEMINI_API_KEY);

async function generateLessonQA(transcript) {
  const model = genAI.getGenerativeModel({ model: "gemini-pro" });
  
  const prompt = `You are a helpful study assistant. Based on the following lesson transcript, answer questions about the content. Provide clear, accurate answers that help students understand the material.

Transcript: ${transcript}

Generate a set of common questions students might ask about this lesson and provide detailed answers.`;

  const result = await model.generateContent(prompt);
  const response = await result.response;
  const text = response.text();
  
  return text;
}

module.exports = { generateLessonQA };



QUIZ_NODE_CODE
